<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <GridLayout
    android:layout_width="wrap_content"
    android:layout_height="240dp"
    android:padding="10dp"
    android:background="@drawable/rounded_dialog"
    android:columnCount="3"
    android:rowCount="2"
    android:useDefaultMargins="true">

    <ImageButton
      android:id="@+id/dialog_category_btn1"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_margin="5dp"
      android:padding="20dp"
      android:background="@drawable/background_circle"
      android:scaleType="fitXY"
      android:src="@drawable/img_vegetable" />

    <ImageButton
      android:id="@+id/dialog_category_btn2"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_margin="5dp"
      android:padding="20dp"
      android:background="@drawable/background_circle"
      android:scaleType="fitXY"
      android:src="@drawable/img_fruit" />
    <ImageButton
      android:id="@+id/dialog_category_btn3"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_margin="5dp"
      android:padding="20dp"
      android:background="@drawable/background_circle"
      android:scaleType="fitXY"
      android:src="@drawable/img_seafood" />
    <ImageButton
      android:id="@+id/dialog_category_btn4"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_margin="5dp"
      android:padding="20dp"
      android:background="@drawable/background_circle"
      android:scaleType="fitXY"
      android:src="@drawable/img_milk" />
    <ImageButton
      android:id="@+id/dialog_category_btn5"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_margin="5dp"
      android:padding="20dp"
      android:background="@drawable/background_circle"
      android:scaleType="fitXY"
      android:src="@drawable/img_meat" />
    <ImageButton
      android:id="@+id/dialog_category_btn6"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_margin="5dp"
      android:padding="20dp"
      android:background="@drawable/background_circle"
      android:scaleType="fitXY"
      android:src="@drawable/img_food" />
  </GridLayout>

</FrameLayout>
